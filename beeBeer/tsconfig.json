{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
